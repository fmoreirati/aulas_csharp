@model _05_WebAPP.MVC.Models.User

@{
    ViewData["Title"] = "Cadastro";
}

<div class="text-center">
    <h1 class="display-4"><i class="fa fa-calendar-times-o" aria-hidden="true"></i></h1>
</div>

<div class="">
    <form class="row g-3 needs-validation" novalidate asp-controller="User" asp-action="Add">
        <div class="">
            <label asp-for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" id="validationNome" required asp-for="nome">
            <div class="valid-feedback" asp-validation-for="nome" >
            </div>
        </div>

        <div class="">
            <label for="validationCustom02" class="form-label">E-mail</label>
            <input type="text" class="form-control" id="validationCustom02" required asp-for="email">
            <div class="valid-feedback">
            </div>
        </div>

        <div class="">
            <label for="validationCustom03" class="form-label">Apelido</label>
            <input type="text" class="form-control" id="validationCustom03" required asp-for="nick">
            <div class="valid-feedback">
            </div>
        </div>

        <div class="">
            <label for="validationCustom04" class="form-label">Senha</label>
            <input type="text" class="form-control" id="validationCustom04" required asp-for="pass">
            <div class="valid-feedback">
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button class="btn btn-primary " value="Add" type="submit">Enviar</button>
            <a class="btn btn-danger ms-1" type="button" asp-action="Index">Cancelar</a>
        </div>
    </form>
</div>